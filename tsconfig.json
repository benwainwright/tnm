{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "paths": {
      "@relay-generated/*": [
        "./src/__generated__/*"
      ]
    },
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "cypress",
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "jsx": "react",
    "noEmit": true
  },
  "include": [
    "src",
    "config",
    "cypress"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/.*/",
    "cypress"
  ]
}
